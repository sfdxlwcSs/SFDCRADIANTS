<apex:page controller="ButtonActionController" tabstyle="Account">
<apex:form >
<apex:pageBlock title="This is an example of a Visualforce page that uses the action 
                       attribute in the <apex:commandButton> to allow a user to update account information.">
<apex:messages />
<apex:pageBlockSection columns="1">
<apex:inputField value="{!account.name}"/>
<apex:inputField value="{!account.type}"/>
<apex:inputField value="{!account.accountsource}"/>
<apex:commandButton action="{!save}" value="save"/>
</apex:pageBlockSection>
</apex:pageBlock> 
</apex:form>
</apex:page>